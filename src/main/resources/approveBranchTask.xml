<?xml version="1.0"?>
<page title="تأیید">
    <init>
        <webService value="obj" address="ws/plan/getTaskByTaskId">
            <webServiceInput ref="urlParams.taskId" name="taskId"/>
        </webService>
    </init>
    <section title="مشخصات مشتری">
        <input label="شماره درخواست :" type="text" value="obj.taskId"/>
        <input label="مبلغ تهسيلات :" type="text" value="obj.amount"/>
        <input label="شماره حساب :" type="text" value="obj.accountNumber"/>
        <input label="نوع تسهيلات :" type="text" value="obj.facilityType"/>

        <comboBox label="تائيد تسهيلات:" value="obj.approve">
            <comboItem itemLabel="تائيد" itemValue="true"/>
            <comboItem itemLabel="رد" itemValue="false"/>
        </comboBox>
        <actions>
            <button label="ارسال">
                <webService address="ws/activiti/approveBranchTask" clearPageOnSuccess="true" >
                    <webServiceInputObject name="obj"/>
                </webService>
            </button>
        </actions>
    </section>
</page>
